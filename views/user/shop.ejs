                            <div class="widget-header position-relative mb-20 pb-10">
                                <h5 class="widget-title mb-10">Filter by price</h5>
                                <div class="bt-1 border-color-1"></div>
                            </div>
                            <form method="GET" action="/shop">
                                <input type="hidden" name="search" value="<%= search || '' %>">
                                <input type="hidden" name="category" value="<%= categoryId || '' %>">
                                <input type="hidden" name="sort" value="<%= sort || '' %>">
                            <div class="label-input mb-2">
                                <label for="minPrice">Min Price:</label>
                                <input type="number" name="minPrice" id="minPrice" value="<%= minPrice || '' %>" />
                            </div>
                            <div class="label-input mb-3">
                                <label for="maxPrice">Max Price:</label>
                                <input type="number" name="maxPrice" id="maxPrice" value="<%= maxPrice || '' %>" />
                            </div>
                            <button type="submit" class="btn btn-sm btn-default w-100">
                                <i class="fi-rs-filter mr-5"></i> Filter
                            </button>
                        </form>

                        </div>
    
                    </div>
