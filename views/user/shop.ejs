                            </nav>
                        </div>
                    </div>
                    <div class="col-lg-3 primary-sidebar sticky-sidebar">
                        <div class="widget-category mb-30">
                            <h5 class="section-title style-1 mb-30 wow fadeIn animated">Category</h5>
                            <ul class="categories">
                              <% categoryList.forEach(category => {%>
                                <li><a href="/shop?category=<%= category._id %>&search=<%= search || "" %>&minPrice=<%= minPrice %>&maxPrice=<%= maxPrice %>&sort=<%= sort || "" %>"
                                    class="<%= categoryId == category._id.toString() ? 'active-category' : '' %>"><%= category.name %></a>
                                </li>
