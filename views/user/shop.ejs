<script>
    document.querySelectorAll(".sort-link").forEach(link => {
        link.addEventListener('click',async (e) => {
            e.preventDefault()

            const sortValue=link.getAttribute('data-sort')
            const urlParams=new URLSearchParams(window.location.search)//to get details about any filteres used in url 
            urlParams.set('sort',sortValue)//add or update the sortvalue

            try {
                const response=await fetch(`shop/?${urlParams.toString()}`,{
                    headers:{"X-Requested-With":"XMLHttpRequest"}//helps server to identify the AJAX request
                })
                const html=await response.text()
                document.getElementById('product-container').innerHTML=html
                 window.history.pushState({}, '', `/shop?${urlParams.toString()}`);//to make sure to update the url without
            } catch (error) {
                console.error("Error while displaying sorted products",error)
                
            }
            
        })        
    });
</script>