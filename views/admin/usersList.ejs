<%- include('../partials/admin/header.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Users List </h2>
                    <p>Details about the users</p>
                </div>
                <div>
                    <a href="#" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Create report</a>
                </div>
            </div>
            
            
                    
                
                
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row align-items-center">
                        
                        <div class="col-md-3 col-6">
                            <input type="text" name="search" id="searchInput" class="form-control" placeholder="Search Users">
                        </div>
                        <div class="col-md-2 col-6">
                            <button type="button" class="btn btn-primary" id="searchButton">Search</button>
                        </div>
                        <div class="col-md-2 col-6">
                            <div class="custom_select">
                                <select class="form-select" id="userStatusFilter"><i class="fa fa-angle-down"></i>
                                    <option selected>All Users</option>
                                    <option>Blocked</option>
                                    <option>Unblocked</option>
                                    
                                </select>
                            </div>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        
                                        <th class="align-middle" scope="col">Name</th>
                                        <th class="align-middle" scope="col">Email</th>
                                        <th class="align-middle" scope="col">Status</th>
                                        <th class="align-middle" scope="col">Action</th>
                                        
                                    </tr>
                                </thead>
                                <tbody id="usersTableBody">
                                    <% users.forEach(user=>{ %>
                                    <tr>
                                        
                                        
                                        <td><%= user.name %></td>
                                        <td>
                                            <%= user.email %>
                                        </td>
                                        <td>
                                            <%= user.isBlocked? 'Blocked':'Active' %>
                                        </td>
                                
                                        <td>
                                            <form id="blockForm-<%= user._id %>" action="/admin/users/<%= user._id %>/block" method="post">
                                                <button class="block-user-btn btn <%=user.isBlocked?"btn-success":"btn-danger" %>" data-user-id="<%= user.id %>" data-username="<%= user.name %>" type="button" ><%= user.isBlocked? "Unblock":"Block" %>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                    
                                    
                                    
                                    
                                </tbody>
                            </table>
                        </div>
                    </div> <!-- table-responsive end// -->
                </div>
            </div>
            <div class="pagination-area mt-30 mb-50">
                <nav aria-label="Product Pagination" class="mt-4">
    <ul class="pagination justify-content-center">
      
      <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>">Previous</a>
        </li>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
          <a class="page-link" href="?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
        </li>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage + 1 %><%= search ? '&search=' + search : '' %>">Next</a>
        </li>
      <% } %>
    </ul>
  </nav>
            </div>
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="/backend/assets/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/backend/assets/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/backend/assets/js/vendors/select2.min.js"></script>
    <script src="/backend/assets/js/vendors/perfect-scrollbar.js"></script>
    <script src="/backend/assets/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="/backend/assets/js/vendors/chart.js"></script>
    <!-- Main Script -->
    <script src="/backend/assets/js/main.js" type="text/javascript"></script>
    <script src="/backend/assets/js/custom-chart.js" type="text/javascript"></script>

    <script>
        document.addEventListener('DOMContentLoaded',()=>{
            
            
            const searchButton=document.getElementById('searchButton')
            const searchInput=document.getElementById('searchInput')
            const statusFilter=document.getElementById('userStatusFilter')
            let currentPage=1
            function fetchFilteredUsers(page=1) {
                currentPage=page
                const selectedStatus=statusFilter.value.toLowerCase()
                const searchTerm=searchInput.value
                const fetchURL=`/admin/users/filter?status=${selectedStatus}&search=${searchTerm}&page=${currentPage}`
                fetch(fetchURL).then(response=>{
                    if(!response.ok){
                        throw new Error('Network response was not ok')
                    }
                    return response.json()
                })
                .then(data=>{
                    updateUserTable(data.users)
                    updatePagination(data.totalPages,data.currentPage)
                })
                .catch(error=>{
                    console.error('Fetch user error',error);
                    
                })
            }
            searchButton.addEventListener('click',function(){
                fetchFilteredUsers()
            })
            statusFilter.addEventListener('change',fetchFilteredUsers)

            function updateUserTable(users) {
                const table=document.getElementById('usersTableBody')
                table.innerHTML=""
                if(users.length==0){
                    table.innerHTML=`<tr><td colspan=3>No users found for this name or status</td></tr>`
                    return
                }
                users.forEach(user=>{
                    const status=user.isBlocked?"Blocked":"Active"
                    const row=`
                        <td>${user.name}</td>
                                        <td>
                                            ${user.email}
                                        </td>
                                        <td>
                                            ${status}
                                        </td>
                                
                                        <td>
                                            <form id="blockForm-${user._id}" action="/admin/users/${user._id}/block" method="post">
                                                <button class="block-user-btn btn ${user.isBlocked?"btn-success":"btn-danger"}" data-user-id="${user._id}" data-username="${user.name}" type="button" 
                                                >${user.isBlocked? "Unblock":"Block"}
                                                </button>
                                            </form>
                                        </td>
                    `
                    table.innerHTML+=row
                })
            }
            function updatePagination(totalPages,currentPage){
                const paginationContainer=document.querySelector('.pagination')
                if(!paginationContainer)return
                paginationContainer.innerHTML=""//clear old pagination links

                for(let i=1;i<=totalPages;i++){
                    const li=document.createElement('li')
                    li.className=`page-item ${i===currentPage?'active':""}`

                    const a=document.createElement('a')
                    a.className='page-link'
                    a.href='#'
                    a.textContent=i
                    a.addEventListener('click',(e)=>{
                        e.preventDefault()
                        fetchFilteredUsers(i)
                    })
                    li.appendChild(a)
                    paginationContainer.appendChild(li)
                    
                }

            }
            //for changing the status of the user
            const tableBody=document.getElementById('usersTableBody')
            tableBody.addEventListener('click',function(event){
                const button =event.target.closest('.block-user-btn')//to find the button where click occured
                //if not a button clicked,do nothing
                if(!button){
                    console.log("not a button")
                    return
                }
                //get user data from button attributes
                const userId=button.dataset.userId
                const username=button.dataset.username;
                    const form=document.getElementById(`blockForm-${userId}`)
                     Swal.fire({
                        title:`Are you sure?`,
                        text:`changing the status of ${username}`,
                        icon:'warning',
                        showCancelButton:true,
                        confirmButtonColor:'#d33',
                        cancelButtonColor:'#3085d6',
                        confirmButtonText:'Yes,proceed!'
                    }).then((result)=>{
                        if(result.isConfirmed){
                            form.submit()
                        }
                    })
            })
        })
     </script>
    
</body>

</html>